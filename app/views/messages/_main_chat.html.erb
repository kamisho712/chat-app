<div class="chat__header">
  <div class="left_header">
    <div class="chatroom_name">
      hogefuga
    </div>
  </div>
  <div class="right_header">
    <div class="end_chat">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="chat__messages">
  <div class="message">
    <div class="upper_message">
      <div class="message_user">
        Tom
      </div>
      <div class="message_date">
        2022/7/19 (Tue) 21:30:00
      </div>
    </div>
    <div class="lower_message">
      <div class="message_content">
        おはよう
      </div>
    </div>
  </div>

  <div class="message">
    <div class="upper_message">
      <div class="message_user">
        Tom
      </div>
      <div class="message_date">
        2022/7/19 (Tue) 21:40:00
      </div>
    </div>
    <div class="lower_message">
      <div class="message_content">
        こんばんは
      </div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'chat__form', local: true do |f| %>
  <div class="form_input">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class="form_image">
      <span class="image_file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
<% end %>